@model GrupoAzureWebIII.ViewModels.FormViewModel

@{
    ViewData["Title"] = "Home Page";
    var mensajeError = ViewBag.mensajeError;
}
<style>
    body {
        background-image: url("@Url.Content("~/images/img.jpg")");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
</style>



@using (Html.BeginForm("EnviarMensaje","Home", FormMethod.Post))
{
    <h1>Tu Secr3to</h1>

    <div class="bg-danger">@mensajeError</div>

    <div class="container d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                    <div class="mb-3">
                        <label for="mensaje" class="form-label">Mensaje:</label>
                        @Html.TextAreaFor(f=> f.mensaje)
                    </div>
                    <div class="mb-">
                        <label for="apodo" class="form-label">Apodo(opcional):</label>
                        @Html.TextBoxFor(f => f.apodo)

                    </div>
                    <div class="mb-3">
                        <label class="form-label">El mensaje anonimo llegara por:</label>
                        <div> 
                            @Html.CheckBoxFor(f=> f.publicarTwitter)
                            <label for="publicarTwitter">Publicar en Twitter</label> 
                        </div> 
                            
                        <div> 
                               @Html.CheckBoxFor(f=> f.publicarEmail)
                            <label for="enviarEmail">Enviar por correo electrónico</label> 
                        </div>

                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuario/E-mail:</label>
                    @Html.TextBoxFor(f => f.user,new {placeholder = "Usuario de Twitter sin @" })

                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>

               
            </div>
        </div>
    </div>
    

}